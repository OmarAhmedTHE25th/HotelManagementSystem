<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="GuestController" styleClass="root-pane">

    <!-- Top Navigation Bar -->
    <top>
        <VBox>
            <HBox spacing="16" alignment="CENTER_LEFT" styleClass="toolbar">
                <padding><Insets top="12" right="20" bottom="12" left="20"/></padding>

                <!-- User Info -->
                <VBox spacing="2">
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
                    <Label fx:id="balanceLabel" style="-fx-font-size: 13px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Quick Actions -->
                <HBox spacing="10" alignment="CENTER">
                    <TextField fx:id="depositField" promptText="Amount"
                               style="-fx-pref-width: 120; -fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6);"/>
                    <Button text="ðŸ’° Deposit" onAction="#onDeposit" styleClass="success-btn"/>
                    <Button text="ðŸ“ Complain" onAction="#onComplain"/>
                    <Button text="View History" onAction="#onViewHistory" minWidth="-Infinity"/>
                    <Button text="ðŸšª Logout" onAction="#onLogout" styleClass="danger-btn"/>
                </HBox>
            </HBox>

            <!-- Reservation Actions Bar -->
            <HBox spacing="12" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 12 20;">
                <Label text="Quick Actions:" style="-fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                <ComboBox fx:id="hotelActionCombo" promptText="Select Hotel"
                          style="-fx-pref-width: 180;"/>
                <TextField fx:id="roomActionField" promptText="Room #"
                           style="-fx-pref-width: 100;"/>
                <Button text="Cancel Booking" onAction="#onCancelReservation" styleClass="danger-btn"/>
                <Button text="Checkout" onAction="#onCheckoutRoom" styleClass="success-btn"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <SplitPane dividerPositions="0.3">

            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <VBox spacing="5" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-color: white;">
                    <Label text="Find Your Perfect Stay" styleClass="header-small"/>

                    <Label text="Location or Hotel" style="-fx-font-size: 11px;"/>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <TextField fx:id="searchField" promptText="City or Hotel Name" HBox.hgrow="ALWAYS"/>
                        <Button text="Search" onAction="#onSearch" styleClass="action-btn" minWidth="-Infinity" defaultButton="true"/>
                    </HBox>

                    <Label text="Minimum Rating" style="-fx-font-size: 11px;" minWidth="-Infinity"/>
                    <ComboBox fx:id="ratingFilterCombo" promptText="..." maxWidth="100" minWidth="-Infinity"/>
                </VBox>

                <Label text="Available Hotels" styleClass="header-small"/>

                <ListView fx:id="hotelList" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="No hotels found matching your search."/>
                    </placeholder>
                </ListView>
            </VBox>

            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <Label text="Available Rooms" styleClass="header-small"/>

                <TableView fx:id="roomTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="numberCol" text="Room #"/>
                        <TableColumn fx:id="typeCol" text="Type"/>
                        <TableColumn fx:id="priceCol" text="Price per night ($)"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5;">
                    <Label text="Checkout Date:"/>
                    <DatePicker fx:id="checkoutDate" promptText="Select Date"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalPriceLabel" text="Total: $0.00" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #1e293b;"/>
                    <Button text="Reserve Selected" onAction="#onReserve" styleClass="action-btn" style="-fx-font-size: 14px;" />
                </HBox>
            </VBox>

        </SplitPane>
    </center>

    <!-- Bottom Panel: My Reservations -->
    <bottom>
        <TitledPane text="ðŸ“‹ My Reservations (Click to Open)" expanded="false">

            <VBox spacing="10" styleClass="footer" style="-fx-padding: 10;">

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Active Bookings" styleClass="header-small"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="Details" styleClass="text-muted" style="-fx-font-size: 10px;"/>
                </HBox>

                <TableView fx:id="reservationsTable" prefHeight="120" maxHeight="150">
                    <columns>
                        <TableColumn fx:id="resHotelCol" text="Hotel" prefWidth="150"/>
                        <TableColumn fx:id="resRoomCol" text="Room"/>
                        <TableColumn fx:id="resPriceCol" text="Price"/>
                        <TableColumn fx:id="resCheckoutCol" text="Checkout" prefWidth="100"/>
                    </columns>
                    <placeholder>
                        <Label text="You have no active reservations."/>
                    </placeholder>
                </TableView>

                <VBox spacing="5" style="-fx-background-color: rgba(102,126,234,0.05); -fx-padding: 8; -fx-background-radius: 8;">
                    <TextArea fx:id="myReservationsArea" prefRowCount="1" editable="false"
                              style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 10px;"/>
                </VBox>

            </VBox>
        </TitledPane>
    </bottom>
</BorderPane>