<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.chart.PieChart?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAdminController" styleClass="root-pane">

    <!-- Top Bar -->
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="toolbar">
            <padding><Insets top="12" right="20" bottom="12" left="20"/></padding>

            <VBox spacing="2">
                <Label text="ðŸ¨ Hotel Manager Dashboard"
                       style="-fx-font-size: 16px; -fx-font-weight: 700;"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="hotelNameLabel"
                           style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                    <Label text="â€¢" style="-fx-font-size: 12px; -fx-opacity: 0.6;"/>
                    <Label fx:id="hotelLocationLabel"
                           style="-fx-font-size: 13px; -fx-opacity: 0.8;"/>
                </HBox>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="ðŸšª Logout" onAction="#onLogout" styleClass="danger-btn"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 24;">

                <!-- Rooms Overview -->
                <VBox spacing="12" styleClass="card">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label text="ðŸ›ï¸ Room Inventory" styleClass="header-small"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="roomCountLabel" text="0 rooms"
                               style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                    </HBox>

                    <Separator/>

                    <!-- Rooms Table -->
                    <TableView fx:id="roomsTable" prefHeight="350">
                        <columns>
                            <TableColumn fx:id="roomNumberCol" text="Room #" prefWidth="100"/>
                            <TableColumn fx:id="priceCol" text="Price/Night ($)" prefWidth="120"/>
                            <TableColumn fx:id="typeCol" text="Room Type" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Management Actions -->
                <HBox spacing="16">

                    <!-- Add Room Card -->
                    <VBox spacing="12" styleClass="card" HBox.hgrow="ALWAYS">
                        <Label text="âž• Add New Room" styleClass="header-small"/>

                        <VBox spacing="6">
                            <Label text="Room Number" styleClass="section-title"/>
                            <TextField fx:id="newRoomNumberField" promptText="e.g., 101"
                                       HBox.hgrow="ALWAYS"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="Price per Night" styleClass="section-title"/>
                            <TextField fx:id="newRoomPriceField" promptText="e.g., 150.00"
                                       HBox.hgrow="ALWAYS"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="Room Type" styleClass="section-title"/>
                            <ComboBox fx:id="newRoomTypeBox" promptText="Select type"
                                      HBox.hgrow="ALWAYS"/>
                        </VBox>

                        <Button text="Add Room" onAction="#onAddRoom"
                                styleClass="action-btn" HBox.hgrow="ALWAYS"
                                maxWidth="Infinity" prefHeight="40"/>

                        <VBox spacing="4" style="-fx-background-color: rgba(102,126,234,0.1); -fx-padding: 10; -fx-background-radius: 8;">
                            <Label text="â„¹ï¸ Tip" style="-fx-font-weight: 600; -fx-font-size: 11px;"/>
                            <Label text="Maximum 100 rooms per hotel"
                                   style="-fx-font-size: 10px; -fx-text-fill: #64748b; -fx-wrap-text: true;"/>
                        </VBox>
                    </VBox>


                    <!-- Update Price Card -->
                    <VBox spacing="12" styleClass="card" HBox.hgrow="ALWAYS">
                        <Label text="ðŸ’² Update Room Price" styleClass="header-small"/>

                        <VBox spacing="6">
                            <Label text="Room Number" styleClass="section-title"/>
                            <TextField fx:id="priceRoomNumberField" promptText="Enter room number"
                                       HBox.hgrow="ALWAYS"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="New Price" styleClass="section-title"/>
                            <TextField fx:id="newPriceField" promptText="Enter new price"
                                       HBox.hgrow="ALWAYS"/>
                        </VBox>

                        <!-- Spacer for alignment -->
                        <Region VBox.vgrow="ALWAYS" style="-fx-min-height: 20;"/>

                        <Button text="Update Price" onAction="#onChangePrice"
                                styleClass="success-btn" HBox.hgrow="ALWAYS"
                                maxWidth="Infinity" prefHeight="40"/>

                        <VBox spacing="4" style="-fx-background-color: rgba(16,185,129,0.1); -fx-padding: 10; -fx-background-radius: 8;">
                            <Label text="ðŸ’¡ Note" style="-fx-font-weight: 600; -fx-font-size: 11px;"/>
                            <Label text="Price changes affect future bookings only"
                                   style="-fx-font-size: 10px; -fx-text-fill: #64748b; -fx-wrap-text: true;"/>
                        </VBox>
                    </VBox>

                </HBox>

                <!-- Quick Stats -->
                <PieChart fx:id="occupancyChart" />
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>