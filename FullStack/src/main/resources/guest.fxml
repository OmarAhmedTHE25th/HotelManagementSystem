<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="GuestController" styleClass="root-pane">

    <!-- Top Navigation Bar -->
    <top>
        <VBox spacing="0">
            <HBox spacing="16" alignment="CENTER_LEFT" styleClass="toolbar">
                <padding><Insets top="12" right="20" bottom="12" left="20"/></padding>

                <!-- User Info -->
                <VBox spacing="2">
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
                    <Label fx:id="balanceLabel" style="-fx-font-size: 13px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Quick Actions -->
                <HBox spacing="10" alignment="CENTER">
                    <TextField fx:id="depositField" promptText="Amount"
                               style="-fx-pref-width: 120; -fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6);"/>
                    <Button text="ðŸ’° Deposit" onAction="#onDeposit" styleClass="success-btn"/>
                    <Button text="ðŸ“ Complain" onAction="#onComplain"/>
                    <Button text="ðŸšª Logout" onAction="#onLogout" styleClass="danger-btn"/>
                </HBox>
            </HBox>

            <!-- Reservation Actions Bar -->
            <HBox spacing="12" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 12 20;">
                <Label text="Quick Actions:" style="-fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                <ComboBox fx:id="hotelActionCombo" promptText="Select Hotel"
                          style="-fx-pref-width: 180;"/>
                <TextField fx:id="roomActionField" promptText="Room #"
                           style="-fx-pref-width: 100;"/>
                <Button text="Cancel Booking" onAction="#onCancelReservation" styleClass="danger-btn"/>
                <Button text="Checkout" onAction="#onCheckoutRoom" styleClass="success-btn"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <SplitPane dividerPositions="0.35" style="-fx-background-color: transparent;">

            <!-- Left Panel: Hotel Search & List -->
            <VBox spacing="16" style="-fx-padding: 20;">

                <!-- Search Card -->
                <VBox spacing="12" styleClass="card-secondary">
                    <Label text="ðŸ” Find Your Perfect Stay" styleClass="header-small"/>

                    <VBox spacing="8">
                        <Label text="Location or Hotel" styleClass="section-title"/>
                        <TextField fx:id="searchField" promptText="City or Hotel Name"
                                   style="-fx-pref-width: 100%;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Minimum Rating" styleClass="section-title"/>
                        <ComboBox fx:id="ratingFilterCombo" promptText="Any Rating"
                                  style="-fx-pref-width: 100%;"/>
                    </VBox>

                    <Button text="Search Hotels" onAction="#onSearch"
                            styleClass="action-btn" style="-fx-pref-width: 100%;"/>
                </VBox>

                <!-- Hotels List -->
                <VBox spacing="8" VBox.vgrow="ALWAYS" styleClass="card-secondary">
                    <Label text="Available Hotels" styleClass="header-small"/>
                    <ListView fx:id="hotelList" VBox.vgrow="ALWAYS"/>
                </VBox>
            </VBox>

            <!-- Right Panel: Rooms & Booking -->
            <VBox spacing="16" style="-fx-padding: 20;">

                <!-- Rooms Table -->
                <VBox spacing="12" VBox.vgrow="ALWAYS" styleClass="card-secondary">
                    <Label text="ðŸ›ï¸ Available Rooms" styleClass="header-small"/>

                    <TableView fx:id="roomTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="numberCol" text="Room #" prefWidth="80"/>
                            <TableColumn fx:id="typeCol" text="Type" prefWidth="120"/>
                            <TableColumn fx:id="priceCol" text="Price/Night" prefWidth="100"/>
                        </columns>
                    </TableView>

                    <!-- Booking Controls -->
                    <HBox spacing="12" alignment="CENTER_LEFT"
                          style="-fx-padding: 12; -fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 8;">
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Checkout Date" style="-fx-font-weight: 600; -fx-font-size: 12px;"/>
                            <DatePicker fx:id="checkoutDate" promptText="Select date"
                                        style="-fx-pref-width: 100%;"/>
                        </VBox>
                        <VBox alignment="BOTTOM_CENTER">
                            <Button text="ðŸŽ‰ Reserve Room" onAction="#onReserve"
                                    styleClass="action-btn"
                                    style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </SplitPane>
    </center>

    <!-- Bottom Panel: My Reservations -->
    <bottom>
        <VBox spacing="12" styleClass="footer" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="ðŸ“‹ My Reservations" styleClass="header-small"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="View all your active bookings below" styleClass="text-muted"
                       style="-fx-font-size: 12px;"/>
            </HBox>

            <!-- Reservations Table -->
            <TableView fx:id="reservationsTable" prefHeight="200" maxHeight="250">
                <columns>
                    <TableColumn fx:id="resHotelCol" text="Hotel" prefWidth="180"/>
                    <TableColumn fx:id="resRoomCol" text="Room" prefWidth="80"/>
                    <TableColumn fx:id="resPriceCol" text="Total Price" prefWidth="100"/>
                    <TableColumn fx:id="resCheckoutCol" text="Checkout Date" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Summary Text Area -->
            <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-padding: 12; -fx-background-radius: 8;">
                <Label text="Reservation Summary" style="-fx-font-weight: 600; -fx-font-size: 13px;"/>
                <TextArea fx:id="myReservationsArea" prefRowCount="3" editable="false"
                          style="-fx-background-color: transparent; -fx-border-width: 0;"/>
            </VBox>
        </VBox>
    </bottom>
</BorderPane>