<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="LoginController" styleClass="root-pane">

    <!-- Center Container -->
    <VBox alignment="CENTER" spacing="32" maxWidth="440">

        <!-- Welcome Section -->
        <VBox alignment="CENTER" spacing="12">
            <Label text="ðŸ¨" style="-fx-font-size: 48px;"/>
            <Label text="Hotel Management" styleClass="header-label"/>
            <Label text="Manage your hotel with ease"
                   style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 15px;"/>
        </VBox>

        <!-- Main Card -->
        <VBox styleClass="card" style="-fx-max-width: 440;">

            <!-- Tab Pane -->
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
                <Tab text="Login">
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
                        <VBox spacing="10" alignment="CENTER">
                            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                            <ComboBox fx:id="roleCombo" promptText="Select Role" maxWidth="Infinity"/>
                            <TextField fx:id="usernameField" promptText="Username"/>
                            <TextField fx:id="idField" promptText="ID"/>
                            <PasswordField fx:id="passwordField" promptText="Password"/>

                            <Button text="Login" onAction="#onLogin" styleClass="action-btn" maxWidth="Infinity"/>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <Tab text="Sign Up">
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
                        <VBox spacing="10" alignment="CENTER">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>

                            <ComboBox fx:id="regRole" promptText="Select Role" maxWidth="Infinity"/>

                            <TextField fx:id="regUsername" promptText="Username"/>
                            <TextField fx:id="regId" promptText="ID"/>
                            <PasswordField fx:id="regPass" promptText="Password (must include special char)"/>
                            <DatePicker fx:id="regDob" promptText="Birthday" maxWidth="Infinity"/>

                            <TextField fx:id="regHotelName" promptText="Hotel Name" maxWidth="Infinity" visible="false" disable="true"/>

                            <Button text="Create Account" onAction="#onRegister" styleClass="action-btn" maxWidth="Infinity"/>
                        </VBox>
                    </ScrollPane>
                </Tab>
            </TabPane>
        </VBox>

        <!-- Footer -->
        <Label text="Secure â€¢ Reliable â€¢ Professional"
               style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;"/>

    </VBox>
</StackPane>